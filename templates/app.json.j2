[
  {
    "name"              : "ethstats-client",
    "script"            : "app.js",
    "log_date_format"   : "YYYY-MM-DD HH:mm Z",
    "merge_logs"        : false,
    "watch"             : false,
    "max_restarts"      : 10,
    "exec_interpreter"  : "node",
    "exec_mode"         : "fork_mode",
    "env":
    {
      "NODE_ENV"        : "production",
      "RPC_HOST"        : "{{ethstats_web3_host}}",
      "RPC_PORT"        : "{{ethstats_web3_port}}",
      "LISTENING_PORT"  : "30303",
      "INSTANCE_NAME"   : "{{ethstats_instance_name}}",
      "CONTACT_DETAILS" : "",
      "WS_SERVER": "{{ws_server}}",
      "WS_SECRET": "{{ws_secret}}",
      "VERBOSITY"       : 1
    }
  }
]

